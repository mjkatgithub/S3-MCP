# S3 Configuration for Integration Tests
# Copy this file to .env and adjust the values for your S3-compatible storage

# S3 Endpoint (e.g., MinIO on localhost:9000)
S3_ENDPOINT=http://localhost:9000

# S3 Credentials
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# S3 Region (default: us-east-1)
S3_REGION=us-east-1

# Use path-style URLs (default: true)
S3_FORCE_PATH_STYLE=true

# Use TLS/HTTPS (default: true, set to false for http:// endpoints)
S3_TLS=false
